<div class="playlist-body" id="playlist-bod">
	<div class="card">
		<div class="card-body">
		<h5 class="card-title">Playlist Tracks</h5>
			<ol id="tracks song-list" class="list-group">
				{{#items}}
				  <li class="dl-horizontal list-group-item">
				      <dt class="playlist_uri">Added At</dt><dd>{{added_at}}</a></dd>
				      <dt class="playlist_uri">Name</dt><dd>{{track.name}}</a></dd>
				  </li>
				{{/items}}
			</ol>
		</div>
	</div>

	<div class="card">
		<div class="card-body">
		<h5 class="card-title">Current Tracks</h5>
			<ol id="curr song-list" class="list-group">
			</ol>
		</div>
	</div>
</div>

<script src="//rubaxa.github.io/Sortable/Sortable.js"></script>
<script>
	var list = document.getElementById("tracks");
	Sortable.create(list, {
		group: 'tracks'
	}); // That's all.
	var curr = document.getElementById("curr");
	Sortable.create(curr, {
		group: 'tracks'
	}); // That's all.
</script>